@model SignalRWebUI.Dtos.ProductDto.UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Page</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Add Product</div>
						</div>
						<div class="card-body">
							<input type="hidden" class="form-control" asp-for="ProductID" id="productname">
							<div class="form-group">
								<label for="productname">Product Name</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname">
							</div>
							<div class="form-group">
								<label for="description">Description</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
							<div class="form-group">
								<label for="price">Price</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>
							<div class="form-group">
								<label for="price">Image Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="price">
							</div>
							<div class="form-group">
								<label for="categoryname">Category Name</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v,  new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="status">Status</label>
								<input type="checkbox" checked data-toggle="toggle" asp-for="ProductStatus" data-onstyle="success">
							</div>
						</div>
						<div class="card-action">
							<input type="submit" class="btn btn-primary" value="Update Product"></input>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

