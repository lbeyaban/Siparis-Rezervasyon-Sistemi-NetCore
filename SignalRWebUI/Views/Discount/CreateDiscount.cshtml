@model SignalRWebUI.Dtos.DiscountDto.CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discount Page</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Add Discount</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Title</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="amount">Amount</label>
								<input type="text" class="form-control" asp-for="Amount" id="amount">
							</div>
							<div class="form-group">
								<label for="description">Description</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
							<div class="form-group">
								<label for="imageurl">Image Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-action">
							<input type="submit" class="btn btn-primary" value="Add Discount"></input>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

