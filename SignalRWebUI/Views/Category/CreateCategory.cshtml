@model SignalRWebUI.Dtos.CategoryDto.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Category Page</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Add Category</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Category Name</label>
							<input type="text" class="form-control" asp-for="CategoryName" id="categoryname">
						</div>
					</div>
					<div class="card-action">
							<input type="submit" class="btn btn-primary" value="Add Category"></input>
					</div>
				</div>
				</form>
			</div>
			
		</div>
	</div>
</div>
