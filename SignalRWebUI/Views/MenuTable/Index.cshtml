
@model List<SignalRWebUI.Dtos.MenuTableDto.ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Tables</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">MenuTables List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Area where menutables are listed
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Table Name</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.MenuName</td>
                                        <td>@item.Status</td>
                                        <td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger">Delete</a></td>
                                        <td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-success">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/MenuTable/CreateMenuTable/" class="btn btn-outline-success">Add Menu Table</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>