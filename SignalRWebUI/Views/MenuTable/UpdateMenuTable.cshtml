@model SignalRWebUI.Dtos.MenuTableDto.UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Menu Table Page</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Menu Table</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableID"/>
                            <div class="form-group">
                                <label for="name">Menu Table Name</label>
                                <input type="text" class="form-control" asp-for="MenuName" id="name">
                            </div>
                        </div>
                        <div class="card-action">
                            <input type="submit" class="btn btn-primary" value="Update Menu Table"></input>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
