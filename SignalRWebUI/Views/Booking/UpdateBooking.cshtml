@model SignalRWebUI.Dtos.BookingDto.UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Booking Page</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Booking</div>
						</div>
						<div class="card-body">
							<input type="hidden" class="form-control" asp-for="BookingID" id="name">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
							<div class="form-group">
								<label for="phone">Phone</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
							<div class="form-group">
								<label for="mail">Mail</label>
								<input type="text" class="form-control" asp-for="Mail" id="mail">
							</div>
							<div class="form-group">
								<label for="personcount">Person Count</label>
								<input type="text" class="form-control" asp-for="PersonCount" id="personcount">
							</div>
							<div class="form-group">
								<label for="date">Date</label>
								<input type="date" class="form-control" asp-for="Date" id="date">
							</div>
						</div>
						<div class="card-action">
							<input type="submit" class="btn btn-primary" value="Update Booking"></input>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


