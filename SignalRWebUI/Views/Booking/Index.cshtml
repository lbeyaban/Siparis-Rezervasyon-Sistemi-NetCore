@model List<SignalRWebUI.Dtos.BookingDto.ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Tables</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Booking List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Area where booking are listed
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name</th>
									<th scope="col">Phone</th>
									<th scope="col">Mail</th>
									<th scope="col">Person Count</th>
									<th scope="col">Date</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.BookingID</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.PersonCount</td>
										<td>@item.Date</td>
										<td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Booking/CreateBooking/" class="btn btn-outline-success">Add Booking</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


