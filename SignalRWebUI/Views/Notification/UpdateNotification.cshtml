@model SignalRWebUI.Dtos.NotificationDto.UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification Page</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Notification</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="NotificationID" />
                            <div class="form-group">
                                <label for="title">Type</label>
                                <input type="text" class="form-control" asp-for="Type" id="type">
                            </div>
                            <div class="form-group">
                                <label for="icon">Icon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="status">Status</label>
                                <input type="text" class="form-control" asp-for="Status" id="status">
                            </div>
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" class="form-control" asp-for="Date" id="date">
                            </div>
                        </div>
                        <div class="card-action">
                            <input type="submit" class="btn btn-primary" value="Update Notification"></input>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


